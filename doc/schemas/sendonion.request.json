{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "onion",
    "first_hop",
    "payment_hash"
  ],
  "properties": {
    "onion": {
      "type": "hex"
    },
    "first_hop": {
      "type": "object",
      "required": [
        "id",
        "amount_msat",
        "delay"
      ],
      "properties": {
        "id": {
          "type": "pubkey"
        },
        "amount_msat": {
          "type": "msat"
        },
        "delay": {
          "type": "u16"
        }
      }
    },
    "payment_hash": {
      "type": "hash"
    },
    "label": {
      "type": "string"
    },
    "shared_secrets": {
      "type": "array",
      "items": {
        "type": "secret"
      }
    },
    "partid": {
      "type": "u16"
    },
    "bolt11": {
      "type": "string"
    },
    "amount_msat": {
      "type": "msat"
    },
    "destination": {
      "type": "pubkey"
    },
    "localofferid": {
      "type": "hash"
    },
    "groupid": {
      "type": "u64"
    }
  }
}
