{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "verified",
    "pubkey"
  ],
  "additionalProperties": false,
  "properties": {
    "verified": {
      "type": "boolean",
      "enum": [
        true
      ],
      "description": "whether the signature was valid"
    },
    "pubkey": {
      "type": "pubkey",
      "description": "the *pubkey* parameter, or the pubkey found by looking for known nodes"
    }
  }
}
