{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "channel_id",
    "tx",
    "txid"
  ],
  "properties": {
    "channel_id": {
      "type": "hex",
      "description": "the channel id of the channel",
      "maxLength": 64,
      "minLength": 64
    },
    "tx": {
      "type": "hex",
      "description": "the funding transaction"
    },
    "txid": {
      "type": "txid",
      "description": "The txid of the **tx**"
    }
  }
}
